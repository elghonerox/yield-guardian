{
  "name": "yield-guardian-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/e2e"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "prepare": "husky"
  },
  "devDependencies": {
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
